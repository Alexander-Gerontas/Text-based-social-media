<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
  <preConditions>
    <dbms type="postgresql"/>
  </preConditions>

  <changeSet id="account-table-creation" author="author" failOnError="true">
    <preConditions>
      <not>
        <tableExists tableName="accounts"/>
      </not>
    </preConditions>
    <createTable tableName="accounts">
      <column name="id" type="SERIAL" autoIncrement="true">
        <constraints primaryKey="true" primaryKeyName="account_pk"/>
      </column>
      <column name="username" type="varchar(50)">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
      <column name="password" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
      <column name="role" type="varchar(10)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="post-table-creation" author="author" failOnError="true">
    <preConditions>
      <not>
        <tableExists tableName="posts"/>
      </not>
    </preConditions>
    <createTable tableName="posts">
      <column name="id" type="SERIAL" autoIncrement="true">
        <constraints primaryKey="true" primaryKeyName="post_pk"/>
      </column>
      <column name="content" type="varchar(3000)">
        <constraints nullable="false"/>
      </column>
      <column name="author_id" type="SERIAL">
        <constraints nullable="false" foreignKeyName="account_fk" references="accounts(id)"/>
      </column>
      <column name="create_date" type="DATE">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="comment-table-creation" author="author" failOnError="true">
    <preConditions>
      <not>
        <tableExists tableName="comments"/>
      </not>
    </preConditions>
    <createTable tableName="comments">
      <column name="id" type="SERIAL" autoIncrement="true">
        <constraints primaryKey="true" primaryKeyName="comment_pk"/>
      </column>
      <column name="content" type="varchar(1000)">
        <constraints nullable="false"/>
      </column>
      <column name="author_id" type="SERIAL">
        <constraints nullable="false" foreignKeyName="account_fk" references="accounts(id)"/>
      </column>
      <column name="post_id" type="SERIAL">
        <constraints nullable="false" foreignKeyName="post_fk" references="posts(id)"/>
      </column>
      <column name="create_date" type="DATE">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="follower-table-creation" author="author" failOnError="true">
    <preConditions>
      <not>
        <tableExists tableName="followers"/>
      </not>
    </preConditions>
    <createTable tableName="followers">
      <column name="id" type="SERIAL" autoIncrement="true">
        <constraints primaryKey="true" primaryKeyName="follower_pk"/>
      </column>
      <column name="follower_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="follower_acc_fk" references="accounts(id)"/>
      </column>
      <column name="following_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="following_acc_fk" references="accounts(id)"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>